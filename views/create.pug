extends layout

block content
  if alerta
    div(id="myModal", class="modal show")
      div.modal-dialog.modal-confirm
        div.modal-content
          div.modal-header
            div.icon-box
              i(class="fas fa-check")

            h4.modal-title Cadastrado!

          div.modal-body
            p.text-center O cadastro foi realizado com sucesso, clique em OK para continuar.

          div.modal-footer
            button(class="btn btn-success btn-block", data-dismiss="modal") OK

  div.signup-form
    form(action="/c", method="post")
      h2 Cadastrar Familia

      div.form-group
        input(type="text", class="form-control", name="origem", placeholder="Nome da Pessoa", required)
      
      div.form-group
        select(class="form-control", name="relacao", required)
          option(value="" selected disabled) Relação
          option(value="Máe") Máe
          option(value="Pai") Pai 
          option(value="Filho") Filho
          option(value="Filha") Filha
          option(value="Cônjugue") Cônjugue

      div.form-group
        input(type="text", class="form-control", name="destino", placeholder="Nome da Pessoa", required)

      div.form-group
        button(type="submit", class="btn btn-success btn-lg btn-block") Cadastrar
        a(href="/", class="btn btn-danger btn-lg btn-block") Cancelar
